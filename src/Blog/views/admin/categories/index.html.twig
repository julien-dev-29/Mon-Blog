{% extends "@admin/layout.html.twig" %}
{% block title 'Editer les catégories' %}
{% block body %}
	<h1>Administration du Blog</h1>

	<p class="text-end">
		<a href="{{path(routePrefix ~ '.create')}}" class="btn btn-primary">Ajouter une catégorie</a>
	</p>
	<table class="table table-striped">
		<thead>
			<tr>
				<td>Titre</td>
				<td></td>
			</tr>
		</thead>
		<tbody>
			{% for item in items %}
				<tr>
					<td>{{ item.name }}</td>
					<td class="d-flex justify-content-end">
						<a href="{{path(routePrefix ~ '.edit', {id: item.id})}}" class="btn btn-primary me-2">Editer</a>
						<form action="{{path(routePrefix ~ '.delete', {id: item.id})}}" class="d-inline" method="post" onsubmit="return confirm('Etes vous sûr?')">
							<input type="hidden" name="_method" value="DELETE">
							<button type="submit" class="btn btn-danger">Supprimer</button>
						</form>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="d-flex justify-content-center align-content-center mt-5">
		{{ paginate(items, routePrefix ~ '.index') }}
	</div>

{% endblock %}
