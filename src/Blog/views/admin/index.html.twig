{% extends "@admin/layout.html.twig" %}
{% block title 'Editer les articles' %}
{% block body %}
	<h1>Administration du Blog</h1>
	<p class="text-end">
		<a href="{{path('blog.admin.create')}}" class="btn btn-primary">Publier un article</a>
	</p>
	<table class="table table-striped">
		<thead>
			<tr>
				<td>Titre</td>
				<td>Actions</td>
			</tr>
		</thead>
		<tbody>
			{% for item in items %}
				<tr>
					<td>{{ item.name }}</td>
					<td>
						<a href="{{path('blog.admin.edit', {id: item.id})}}" class="btn btn-primary">Editer</a>
						<form action="{{path('blog.admin.delete', {id: item.id})}}" class="d-inline" method="post" onsubmit="return confirm('Etes vous sÃ»r?')">
							<input type="hidden" name="_method" value="DELETE">
							<button type="submit" class="btn btn-danger">Supprimer</button>
						</form>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="d-flex justify-content-center align-content-center">
		{{ paginate(items, 'blog.admin.index') }}
	</div>

{% endblock %}
