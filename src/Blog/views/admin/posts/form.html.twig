{{ csrf_input() }}

<div class="row">
	<div class="mb-3 col-md-4">
		{{ field('name', item.name, 'Titre de l\'article') }}
    </div>
    <div class="mb-3 col-md-4">
	    {{ field('category_id', item.categoryId ?? "", 'Catégorie de l\'article', {options: categories}) }}
	</div>
	<div class="mb-3 col-md-4">
	    {{ field('published', item.published ?? "", 'Mettre en ligne ?', {type: 'checkbox'}) }}
	</div>
</div>
<div class="row">
	<div class="mb-3 col-md-4">
		{% if item.image %}
			<img src="{{item.thumb}}" alt="image de l'article" style="width:100%">
		{% endif %}
	</div>

	<div class="mb-3 col-md-4">
		{{field('image', item.slug, 'Image', {type: 'file'})}}
	</div>
	<div class="mb-3 col-md-4">
		{{ field('slug', item.slug, 'Slug de l\'article') }}
    </div>
</div>

<div class="mb-3">
	{{ field('content', item.content, 'Contenu de l\'article', {'type':'textarea'}) }}
	</div>
	<div class="mb-3">
		{{ field('created_at', item.createdAt, 'Date de création', {'class': 'datepicker'}) }}
	</div>
